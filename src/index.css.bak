@import "../node_modules/react-grid-layout/css/styles.css";
@import "../node_modules/react-resizable/css/styles.css";
@import "./styles/variables.css";
@import "./styles/glass-effects.css";
@import "./styles/theme-colors.css";

@tailwind base;
@tailwind components;
@tailwind utilities;

body {
    margin: 0;
    padding: 0;
    overflow-y: auto;
    height: 100%;
    scrollbar-width: none;
    background: var(--current-bg);
    transition: background 0.3s ease;
}

#root {
    position: relative;
    z-index: 2;
    min-height: 100vh;
    overflow: visible;
}

html {
    height: 100%;
}

.overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/static.png");
    background-repeat: repeat;
    pointer-events: none;
    z-index: 3;
    opacity: 1.5%;
}

.react-grid-item.react-grid-placeholder {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 2px dashed rgba(255, 255, 255, 0.4);
    transition-duration: 100ms;
    z-index: 2;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    -o-user-select: none;
    user-select: none;
    border-radius: 25px;
    transition: all 400ms ease 0s !important;
    will-change: transform;
    box-shadow: 0 8px 32px rgba(255, 255, 255, 0.1);
}

.react-grid-item {
    transition: var(--transition-normal) ease 0s;
}

.m-50 {
    margin: 50px;
}

@-moz-document url-prefix() {
    html {
        scrollbar-width: none;
    }
}

/* Glass effects are now in separate module */

/* Core utility classes */
.m-50 {
    margin: 50px;
}

/* Floating animation */
@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-6px);
    }
}

.float {
    animation: float 6s ease-in-out infinite;
}

/* Enhanced transitions */
* {
    transition: all var(--transition-normal) var(--ease-curve);
}

/* Scrollbar styling */
::-webkit-scrollbar {
    width: 8px;
}
::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
}
::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    transition: all 0.2s ease;
}
::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.5);
}

[data-theme="light"] ::-webkit-scrollbar-track {
    background: rgba(100, 116, 139, 0.1);
}
[data-theme="light"] ::-webkit-scrollbar-thumb {
    background: rgba(100, 116, 139, 0.3);
}
[data-theme="light"] ::-webkit-scrollbar-thumb:hover {
    background: rgba(100, 116, 139, 0.5);
}

/* Light mode overlay */
[data-theme="light"] .overlay {
    opacity: 0.2%;
    filter: invert(1) opacity(0.3);
}

